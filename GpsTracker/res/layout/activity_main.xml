<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/BtnDesactivar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="88dp"
        android:onClick="onClick2"
        android:text="Desactivar" />

    <Button
        android:id="@+id/BtnActualizar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BtnDesactivar"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="34dp"
        android:onClick="onClick"
        android:text="Activar" />

    <TextView
        android:id="@+id/LblPosPrecision"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BtnActualizar"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="59dp"
        android:text="precision:" />

    <TextView
        android:id="@+id/LblEstado"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LblPosPrecision"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="26dp"
        android:text="Estado:" />

    <TextView
        android:id="@+id/LblPosLatitud"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LblEstado"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="26dp"
        android:text="latitude:" />

    <TextView
        android:id="@+id/LblPosLongitud"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LblPosLatitud"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="22dp"
        android:text="longitude:" />

</RelativeLayout>